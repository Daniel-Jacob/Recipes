<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayoutt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.recipesss.RecipeActivity"
    >

    <SearchView
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:actionViewClass="android.support.v7.widget.SearchView"
        android:queryHint="Search..."
        android:layout_marginBottom="429dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    </SearchView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/Loginandlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/favorites"
            android:onClick="loginOrLogout"
            android:text="Log out" />

        <Button
            android:id="@+id/recipebyingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="recipeByIngredient"
            android:text="Ingredient-based recipes" />

        <Button
            android:id="@+id/favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:onClick="favorites"
            android:text="Favorites" />

        <ProgressBar
            android:id="@+id/indeterminateBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/recipebyingredient"
            android:layout_below="@+id/Loginandlogout"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="81dp"
            android:visibility="invisible" />


    </RelativeLayout>

</RelativeLayout>


